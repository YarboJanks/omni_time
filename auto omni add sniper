                        hotkey 'cancel current target'
                    endwhile
                    say 'all kill' 
                    while not targetexists harmful
                        wait 50
                    endwhile
                    while targetexists harmful
                        target lasttarget
                    endwhile
                    settimer AllKillTimer 0
                endif
            endif
        else
            if lasttarget 
            hotkey 'target closest non-friendly monster'
            @setvar! currentTarget lasttarget
            getlabel currentTarget myLabel
            if find currentTarget
                attack currentTarget
                wait 50
                if discord = 1 and timer DiscordTimer >= DiscordTimerCD
                    if 'discord' in myLabel
                        // do nothing
                    else
                        while targetexists
                            hotkey 'cancel current target'
